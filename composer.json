    "type": "project",
    "require": {
        "php": ">=7.4",
        "telegram-bot/api": "^2.3",
        "vlucas/phpdotenv": "^5.3",
        "endroid/qr-code": "^4.0",
        "monolog/monolog": "^2.0",
        "phpmailer/phpmailer": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "XUI\\": "src/"
